@model SiteWebMultiSport.Models.Section

<h2>Créneaux pour la section @Model.Nom</h2>

<a asp-controller="Creneau" asp-action="Create" asp-route-sectionId="@Model.Id" class="btn btn-primary mb-3">
    Ajouter un créneau
</a>

<table class="table">
    <thead>
        <tr>
            <th>Jour</th>
            <th>Heure de début</th>
            <th>Heure de fin</th>
            <th>Lieu</th>
            <th>Capacité</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Creneaux != null && Model.Creneaux.Any())
        {
            @foreach (var creneau in Model.Creneaux)
            {
                <tr>
                    <td>@creneau.Jour</td>
                    <td>@creneau.HeureDebut</td>
                    <td>@creneau.HeureFin</td>
                    <td>@creneau.Lieu</td>
                    <td>@creneau.Capacite</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Aucun créneau disponible pour cette section.</td>
            </tr>
        }
    </tbody>
</table>
