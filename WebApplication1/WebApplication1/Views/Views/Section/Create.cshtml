@model SiteWebMultiSport.Models.Section
@{
    ViewData["Title"] = "Créer une Section";
}

<h2>Créer une Section</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<form asp-controller="Section" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" class="form-control" required />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisciplineId" class="control-label"></label>
        <select asp-for="DisciplineId" class="form-control" required>
            <option value="">Veuillez sélectionner une discipline</option> <!-- Option vide -->
            @foreach (var discipline in ViewBag.Disciplines)
            {
                <option value="@discipline.Id">@discipline.Nom</option>
            }
        </select>
        <span asp-validation-for="DisciplineId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EncadrantId" class="control-label"></label>
        <select asp-for="EncadrantId" class="form-control" required>
            <option value="">Veuillez sélectionner un encadrant</option> <!-- Option vide -->
            @foreach (var encadrant in ViewBag.Encadrants)
            {
                <option value="@encadrant.Id">@encadrant.Name</option>
            }
        </select>
        <span asp-validation-for="EncadrantId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
</form>




