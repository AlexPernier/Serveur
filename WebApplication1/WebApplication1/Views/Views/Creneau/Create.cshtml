@model SiteWebMultiSport.Models.Creneau

<h2>Créer un créneau</h2>

<form asp-controller="Creneau" asp-action="Create" method="post">
    <!-- Champ masqué pour transmettre l'ID de la section -->
    <input type="hidden" asp-for="SectionId" value="@ViewBag.SectionId" />

    <div class="form-group">
        <label asp-for="Jour" class="control-label"></label>
        <select asp-for="Jour" class="form-control" required>
            <option>Lundi</option>
            <option>Mardi</option>
            <option>Mercredi</option>
            <option>Jeudi</option>
            <option>Vendredi</option>
            <option>Samedi</option>
            <option>Dimanche</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HeureDebut" class="control-label"></label>
        <input asp-for="HeureDebut" type="time" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="HeureFin" class="control-label"></label>
        <input asp-for="HeureFin" type="time" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Lieu" class="control-label"></label>
        <input asp-for="Lieu" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Capacite" class="control-label"></label>
        <input asp-for="Capacite" type="number" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
</form>
