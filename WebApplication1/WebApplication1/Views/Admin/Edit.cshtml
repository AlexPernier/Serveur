@model SiteWebMultiSport.Models.Adherant

@{
    ViewData["Title"] = "Modifier un Adhérant";
}

<h2>Modifier un Adhérant</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Champ caché pour conserver l'ID -->

    <div class="form-group">
        <label asp-for="Name" class="control-label">Nom</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateNaissance" class="control-label">Date de naissance</label>
        <input asp-for="DateNaissance" type="date" class="form-control" />
        <span asp-validation-for="DateNaissance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label">Téléphone</label>
        <input asp-for="Phone" type="tel" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password" class="control-label">Nouveau mot de passe</label>
        <input type="password" name="Password" id="Password" class="form-control" placeholder="Laissez vide pour ne pas modifier" />
    </div>
    <!-- Champ caché pour IsAdmin -->
    <div class="form-group">
        <label asp-for="IsAdmin" class="control-label"></label>
        <input asp-for="IsAdmin" type="checkbox" value="true" />
        <span asp-validation-for="IsAdmin" class="text-danger"></span>
    </div>

    <!-- Champ caché pour IsEncadrant -->
    <div class="form-group">
        <label asp-for="IsEncadrant" class="control-label"></label>
        <input asp-for="IsEncadrant" type="checkbox" value="true" />
        <span asp-validation-for="IsEncadrant" class="text-danger"></span>
    </div>

    <!-- Champ caché pour IsSubscribed -->
    <div class="form-group">
        <label asp-for="IsSubscribed" class="control-label"></label>
        <input asp-for="IsSubscribed" type="checkbox" value="true" />
        <span asp-validation-for="IsSubscribed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
