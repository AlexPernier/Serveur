@model IEnumerable<SiteWebMultiSport.Models.Section>

<h2>Vos Sections</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Discipline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sections in Model)
        {
            <tr>
                <td>@sections.Nom</td>
                <td>@sections.Discipline.Nom</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Section" asp-action="Creneaux" asp-route-id="@sections.Id">Voir les créneaux</a>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@sections.Id">Modifier</a>
                </td>
            </tr>
        }
    </tbody>
</table>
