@{
    ViewData["Title"] = "Connexion";
}

<h2>Connexion</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Entrez votre nom" />
        <span asp-validation-summary="All" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password">Mot de passe</label>
        <input type="password" name="Password" id="Password" class="form-control" placeholder="Entrez votre mot de passe" />
        <span asp-validation-summarr="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary  mt-2">Se connecter</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

